@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/PublicLayout.cshtml";
}

@*// Saltinis: https://bootsnipp.com/snippets/z8aQr*@

<div class="container login-container">
    <form asp-controller="Profile" asp-action="Register" method="post">
        <div class="form-group">
            <label for="EmailInput">E-mail</label>
            <input name="email" type="text" class="form-control" id="EmailInput" placeholder="Password">
        </div>
        <div class="form-group">
            <label for="UsernameInput">User Name</label>
            <input name="username" type="text" class="form-control" id="UsernameInput" placeholder="Enter username">
        </div>
        <div class="form-group">
            <label for="PasswordInput">Password</label>
            <input name="password" type="password" class="form-control" id="PasswordInput" placeholder="Password">
        </div>
        <label for="admin">Administrator</label>
        <input type="radio" name="role" id="admin" value="admin"><br>
        <label for="organizer">Organizer</label>
        <input type="radio" name="role" id="organizer" value="organizer"><br>
        <label for="participant">Participant</label>
        <input type="radio" name="role" id="participant" value="participant"><br><br>
        <button type="submit" class="btn btn-primary">Registruotis</button>
    </form>
</div>