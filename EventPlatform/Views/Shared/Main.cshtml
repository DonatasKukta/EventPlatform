@{
    Layout = "~/Views/MainLayout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@if ("participant".Equals((string)ViewData["Role"]))
{
    <a asp-controller="Event" asp-action="List">Peržiūrėti renginius</a>
    <a asp-controller="Schedule" asp-action="List">Peržiūrėti tvarkaraštį</a>
    <a asp-controller="Promotion" asp-action="GetList">Peržiūrėti reklamas</a>
}
else if ("admin".Equals((string)ViewData["Role"]))
{
    <a asp-controller="Promotion" asp-action="List">Peržiūrėti reklamų užsakymus</a>
}
else if ("organizer".Equals((string)ViewData["Role"]))
{
    <a asp-controller="Promotion" asp-action="List">Peržiūrėti reklamų užsakymus</a>
    <a asp-controller="Event" asp-action="List">Valdyti renginius</a>
}